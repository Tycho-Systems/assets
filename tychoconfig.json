{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "UUID": {
      "type": "string",
      "format": "uuid",
      "description": "Unique identifier for the bot"
    },
    "env": {
      "type": "object",
      "description": "Map of .env keys to readable labels",
      "patternProperties": {
        "^[A-Z_]+$": {
          "type": "string",
          "description": "Human-readable label for the .env key",
          "enum": [
            "Discord Token",
            "ER:LC API Key",
            "Custom Label"
          ],
          "default": "Custom Label"
        }
      },
      "additionalProperties": false
    }
  },
  "required": ["UUID", "env"]
}
